<%= form_for(@poll) do |f| %>
  <ul>
  <% @poll.errors.full_messages.each do |error| %>
	<li><%= error %></li>
	<% end %>
  </ul>

  <p>
  	<%= f.label :name %><br />
  	<%= f.text_field :name %>
  </p>
  <p>
  	<%= f.label :description %><br />
  	<%= f.text_field :description %>  
  </p>
  <p>
  	<%= f.submit "Create"%>
  </p>
<% end %>